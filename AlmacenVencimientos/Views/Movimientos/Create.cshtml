@model AlmacenVencimientos.Models.MovimientoInventario
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Nuevo Movimiento";
}

<h1>Nuevo Movimiento</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="LoteId" class="control-label">Lote</label>
                <select asp-for="LoteId" class="form-control"
                        asp-items="@(ViewData["LoteId"] as IEnumerable<SelectListItem>)">
                    <option value="">-- Seleccione lote --</option>
                </select>
                <span asp-validation-for="LoteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label">Tipo de movimiento</label>
                <select asp-for="Tipo" class="form-control"
                        asp-items="@(ViewData["Tipo"] as IEnumerable<SelectListItem>)">
                    <option value="">-- Seleccione tipo --</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" type="date" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Motivo" class="control-label"></label>
                <textarea asp-for="Motivo" class="form-control"></textarea>
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
