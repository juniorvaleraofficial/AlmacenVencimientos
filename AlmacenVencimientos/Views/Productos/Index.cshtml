@model IEnumerable<AlmacenVencimientos.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    var buscar = ViewData["Buscar"] as string;
}

<h1>Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Producto</a>
</p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <input type="text"
               name="buscar"
               value="@buscar"
               class="form-control"
               placeholder="Buscar por nombre, código o categoría" />
    </div>
    <button type="submit" class="btn btn-secondary ms-2">Buscar</button>
    <a asp-action="Index" class="btn btn-link">Limpiar</a>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @(item.Activo ? "Sí" : "No")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
