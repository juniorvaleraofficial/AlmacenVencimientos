@model IEnumerable<AlmacenVencimientos.Models.Lote>

@{
    ViewData["Title"] = "Reporte de inventario por lote";
    decimal totalValor = 0;
}

<h1>Reporte de inventario por lote</h1>

<p>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Volver al panel</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Código Lote</th>
            <th>Fecha Vencimiento</th>
            <th>Cantidad</th>
            <th>Costo Unitario</th>
            <th>Valor total</th>
            <th>Ubicación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var valor = item.CantidadActual * item.CostoUnitario;
            totalValor += valor;
            <tr>
                <td>@item.Producto?.Nombre</td>
                <td>@item.CodigoLote</td>
                <td>@item.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                <td>@item.CantidadActual</td>
                <td>@item.CostoUnitario.ToString("N2")</td>
                <td>@valor.ToString("N2")</td>
                <td>@item.Ubicacion</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="5" class="text-end">Valor total del inventario:</th>
            <th>@totalValor.ToString("N2")</th>
            <th></th>
        </tr>
    </tfoot>
</table>
